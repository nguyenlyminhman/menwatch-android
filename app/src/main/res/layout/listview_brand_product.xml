<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#73B6E1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_margin="1sp"
        android:background="#73B6E1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#FFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_margin="3dp"
                android:adjustViewBounds="true"
                android:id="@+id/ivBrandProduct"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtB_ProductName"
                    android:textColor="#73B6E1"
                    android:text="Townsman Chronograph Brown Leather Watch"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                     />
                <TextView
                    android:layout_margin="3dp"
                    android:id="@+id/txtB_ProductPrice"
                    android:textColor="#73B6E1"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$ 450"
                    android:textSize="18sp" />
                <TextView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/txtB_ProductDetails"
                    android:textColor="#242424"
                    android:text="Meet Q Grant, our classic hybrid that looks like a watch, but acts like a smartwatch"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>